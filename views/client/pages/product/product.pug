extends ../../layout/layoutDefault.pug
include ../../mixins/index.pug
block main
  .container
    .row 
      .col-12
        +box-Headers("Danh sách sản phẩm")
    .row 
      .col-4  
          each item in dataProduct
            a(class="product-item" href=`/products/detail/${item.id}`).product-item
              .inner-image 
                img(src=item.thumbnail, alt=item.title)
              .inner-content 
                h3.inner-title #{item.title}
                .inner-price-new #{item.priceNew}$
                .inner-price-old #{item.price}$
                .inner-discount #{item.discountPercentage}%